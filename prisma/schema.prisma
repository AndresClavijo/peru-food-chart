// prisma/schema.prisma

datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

model Dish {
  id        Int      @id @default(autoincrement())
  name      String
  imageUrl  String?
  slug      String   @unique
  votes     Vote[]
  createdAt DateTime @default(now())
}

model Vote {
  id        Int      @id @default(autoincrement())
  userId    String?
  dish      Dish     @relation(fields: [dishId], references: [id])
  dishId    Int
  x         Float
  y         Float
  createdAt DateTime @default(now())
}





